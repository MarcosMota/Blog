@model Blog.Web.Areas.Admin.Models.PostViewModel
@{
    ViewBag.Title = "Novo";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
@section Styles{
<style>
    ul.nav.nav-tabs li.active a{
        background:#5cb85c;
    }
    </style>    
}
<div id="tab-general" ng-controller="postController">
    <div class="row mbl">
        <div class="col-lg-12">

            <div class="col-md-12">
                <div id="area-chart-spline" style="width: 100%; height: 300px; display: none;">
                </div>
            </div>

        </div>

        <div class="col-lg-12">

            <div class="page-content">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="panel">
                            <div class="panel-body">
                                @using (Html.BeginForm("Novo", "Post", FormMethod.Post, new { enctype = "multipart/form-data"}))
                                {
                                <h2>Post</h2>
                                <a href="#" class="btn btn-info">
                                    <i class="fa fa-check"></i> Salvar
                                </a>
                                <button class="btn btn-success" type="submit">
                                    <i class="fa fa-check"></i> Salvar e Publicar
                                </button>
                                <ul id="generalTab" class="nav nav-tabs responsive">
                                    <li class="active"><a href="#alert-tab" data-toggle="tab">Post</a></li>
                                    <li><a href="#note-tab" data-toggle="tab">SEO</a></li>
                                </ul>

                                <div id="generalTabContent" style="margin-top: 20px;" class="tab-content responsive">
                                    <div id="alert-tab" class="tab-pane fade in active">
                                        <div class="row">
                                            
                                                @Html.HiddenFor(x=>x.id_post)
                                            <div class="col-lg-8">
                                                <div class="form-group">
                                                    <label>Categorias</label>
                                                    @Html.DropDownListFor(model => model.id_categoria, ViewBag.Categorias as SelectList,new { @class = "form-control" })
                                                
                                                </div>
                                            </div>
                                            <div class="col-lg-4">
                                                <div class="form-group">
                                                    <label>Publicado</label>
                                                    @Html.CheckBoxFor(x => x.ativo, new { @class = "radio" })
                                                </div>
                                            </div>
                                            <div class="form-group">
                                                <div>
                                                    @Html.LabelFor(m => m.ImageUpload)
                                                    @Html.TextBoxFor(m => m.ImageUpload, new { type = "file" })
                                                </div>
                                            </div>
                                            <div class="form-group">
                                                <label>Titulo</label>
                                                @Html.TextBoxFor(x=>x.titulo, new { @class = "form-control" })
                                            </div>
                                            <div class="form-group">
                                                <label>Descricao</label>
                                                @Html.TextAreaFor(x => x.descricao,6,6, new { @class = "form-control" })
                                            </div>
                                            <div class="form-group">
                                                <label>Conteudo</label>
                                                @Html.TextAreaFor(x=>x.conteudo,new {id="editor" })
                                                @*<div id="editor">
                                                </div>*@

                                            </div>
                                        </div>
                                        </div>
                                   
                                    <div id="note-tab" class="tab-pane fade">
                                        <div class="row">
                                            <div class="col-lg-12">
                                                <div class="form-group">
                                                    <label>Meta Title</label>
                                                    @Html.TextBoxFor(x=>x.meta_title,new { @class="form-control"})
                                                </div>
                                                <div class="form-group">
                                                    <label>Meta Description</label>
                                                    @Html.TextBoxFor(x => x.meta_description, new { @class = "form-control" })
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                }
                                </div>
                        </div>
                    </div>
                </div>
            </div>

        </div>

    </div>
</div>


@section Scripts{
<script src="~/Areas/Admin/ckeditor/ckeditor.js"></script>
<script src="~/Areas/Admin/ckeditor/samples/js/sample.js"></script>
<link href="~/Areas/Admin/ckeditor/samples/css/samples.css" rel="stylesheet" />
<link href="~/Areas/Admin/ckeditor/samples/toolbarconfigurator/lib/codemirror/neo.css" rel="stylesheet" />

<script>
	initSample();
</script>


    }

